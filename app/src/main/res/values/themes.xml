<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DictionaryApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_gray</item>
        <item name="colorPrimaryVariant">@color/dark_blue_gray</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/purple_200</item>
        <item name="colorSecondaryVariant">@color/purple_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <item name="searchViewStyle">@style/SearchViewStyle</item>

        <item name="bottomNavigationStyle">@style/BottomNavigationStyle</item>

        <!--SearchView query text color-->
        <item name="android:textColorPrimary">@color/white</item>
        <!--SearchView query hint text color-->
        <item name="android:textColorHint">@color/white</item>

    </style>

    <style name="SearchViewStyle" parent="Widget.AppCompat.SearchView">
        <item name="searchIcon">@drawable/ic_baseline_search_24</item>
        <item name="voiceIcon">@drawable/ic_baseline_keyboard_voice_24</item>
        <item name="closeIcon">@drawable/ic_baseline_close_24</item>
        <item name="android:background">@drawable/search_view_shape</item>
        <item name="android:backgroundTint">@color/blue_gray</item>
        <item name="queryBackground">@color/transparent</item>
        <item name="iconifiedByDefault">false</item>
    </style>

    <style name="BottomNavigationStyle" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="android:background">@drawable/bottom_nav_shape</item>
        <item name="labelVisibilityMode"> selected</item>
        <item name="itemIconSize">28dp</item>
        <item name="itemIconTint">@drawable/selector_bottom_navigation</item>
        <item name="itemTextColor">@drawable/selector_bottom_navigation</item>
    </style>

</resources>